<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.TimbangUkur">

    <androidx.cardview.widget.CardView

        android:id="@+id/card_ukurberat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginVertical="12dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="#f3d6c1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ukur Berat Ayam"
                android:gravity="center"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/dark_green"
                android:textSize="18sp"/>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="12dp">
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btn_dash_lantai1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="6dp"
                            android:text="@string/lantai1"
                            android:textColor="@color/white"
                            android:background="@drawable/shape_button"
                            android:layout_weight="1"/>
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btn_off_dash_lantai1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="6dp"
                            android:visibility="gone"
                            android:text="@string/lantai1"
                            android:textColor="@color/black2"
                            android:background="@drawable/shape_button_off"
                            android:layout_weight="1"/>
                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="match_parent"/>
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btn_dash_lantai2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="6dp"
                            android:text="@string/lantai2"
                            android:visibility="invisible"
                            android:textColor="@color/white"
                            android:background="@drawable/shape_button"
                            android:layout_weight="1"/>
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btn_off_dash_lantai2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="6dp"
                            android:visibility="gone"
                            android:text="@string/lantai2"
                            android:textColor="@color/black2"
                            android:background="@drawable/shape_button_off"
                            android:layout_weight="1"/>
                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="match_parent"/>
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btn_dash_lantai3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="6dp"
                            android:text="@string/lantai3"
                            android:visibility="invisible"
                            android:textColor="@color/white"
                            android:background="@drawable/shape_button"
                            android:layout_weight="1"/>
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btn_off_dash_lantai3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="6dp"
                            android:visibility="gone"
                            android:text="@string/lantai3"
                            android:textColor="@color/black2"
                            android:background="@drawable/shape_button_off"
                            android:layout_weight="1"/>
                    </LinearLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="4dp"
                        android:hint="Umur"
                        app:boxBackgroundColor="@color/white"
                        app:counterMaxLength="2">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/tb_umur"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:maxLength="2"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="4dp"
                        android:hint="Sampel 1"
                        app:boxBackgroundColor="@color/white"
                        app:counterMaxLength="2">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/tb_sampel1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="4dp"
                        android:hint="Sampel 2"
                        app:boxBackgroundColor="@color/white"
                        app:counterMaxLength="2">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/tb_sampel2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="4dp"
                        android:hint="Sampel 3"
                        app:boxBackgroundColor="@color/white"
                        app:counterMaxLength="2">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/tb_sampel3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="4dp"
                        android:hint="Sampel 4"
                        app:boxBackgroundColor="@color/white"
                        app:counterMaxLength="2">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/tb_sampel4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="4dp"
                        android:hint="Sampel 5"
                        app:boxBackgroundColor="@color/white"
                        app:counterMaxLength="2">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/tb_sampel5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            />
                    </com.google.android.material.textfield.TextInputLayout>




                    <Button
                        android:id="@+id/btn_tb_hitung"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="4dp"
                        android:layout_gravity="center"
                        android:text="Hitung"
                        android:textSize="18sp"/>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
        <!--        <Button-->
        <!--            android:id="@+id/btn_nekropsi"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="50dp"-->
        <!--            android:layout_marginHorizontal="12dp"-->
        <!--            android:layout_marginVertical="6dp"-->
        <!--            android:src="@drawable/shape_button"-->
        <!--            android:text="tambah nekropsi" />-->
    </androidx.cardview.widget.CardView>

</RelativeLayout>