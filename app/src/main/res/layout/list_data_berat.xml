<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"
        android:paddingHorizontal="16dp">

        <TextView
            android:id="@+id/br_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:text="29 September 2022"
            android:textColor="@color/dark_green"
            android:textSize="16sp" />
        <ImageView
            android:id="@+id/data_berat_iv"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/br_date"
            android:layout_marginVertical="8dp"
            android:src="@drawable/shape_rectangle" />
        <LinearLayout
            android:layout_below="@id/data_berat_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/shape_rectangle"
                android:padding="8dp"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Umur: "
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:fontFamily="@font/roboto_regular"/>
                <TextView
                    android:id="@+id/br_umur"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="16sp"
                    android:fontFamily="@font/roboto_bold"/>
            </LinearLayout>
            <ImageView
                android:layout_width="8dp"
                android:layout_height="0dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/shape_rectangle"
                android:padding="8dp"
                android:layout_marginVertical="6dp"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Berat Rata-rata: "
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_regular"/>
                <TextView
                    android:id="@+id/br_berat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="16sp"
                    android:fontFamily="@font/roboto_bold"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>